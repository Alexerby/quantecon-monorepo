# Use a white/minimal background
figure.facecolor: fafafa
axes.facecolor: fafafa
axes.edgecolor: 333333
axes.grid: True
grid.color: e9ecef

# Typography
font.family: monospace
axes.titlesize: 14
axes.titleweight: bold
axes.labelsize: 10

# Colors (Minimalist Blue & Grayscale)
axes.prop_cycle: cycler('color', ['343a40', '007bff', 'dc3545', '20c997'])
lines.linewidth: 2
patch.edgecolor: fafafa

# Spines
axes.spines.top: False
axes.spines.right: False
